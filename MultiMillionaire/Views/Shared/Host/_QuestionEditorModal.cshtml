<div class="modal fade" id="editQuestionsModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content box">
            <div class="modal-header">
                <h2 class="modal-title">Edit questions</h2>
            </div>
            <div class="modal-body py-0">
                @for (var i = 1; i <= 15; i++)
                {
                    <div class="row">
                        <div class="col-1 d-flex align-items-center justify-content-center">@i</div>
                        <div class="col editorQuestion px-0 pt-2 pb-2">
                            <question id="question@(i)" row-class="mx-0"></question>
                            <div class="collapse" id="question@(i)_collapse">
                                <div class="row mb-2 mx-0">
                                    <answer letter="A" position="left" id="question@(i)_answerA" class="disabled"></answer>
                                    <answer letter="B" position="right" id="question@(i)_answerB" class="disabled"></answer>
                                </div>
                                <div class="row mb-2 mx-0">
                                    <answer letter="C" position="left" id="question@(i)_answerC" class="disabled"></answer>
                                    <answer letter="D" position="right" id="question@(i)_answerD" class="disabled"></answer>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 py-2 d-flex align-items-center justify-content-center">
                            <button class="editorBtn mx-1" data-bs-toggle="collapse" data-bs-target="#question@(i)_collapse">
                                <i class="bi bi-arrows-expand"></i>
                            </button>
                            <button class="editorBtn mx-1">
                                <i class="bi bi-chevron-up"></i>
                            </button>
                            <button class="editorBtn mx-1">
                                <i class="bi bi-chevron-down"></i>
                            </button>
                            <button class="editorBtn mx-1" onclick="questionEditor.regenerate(@(i))">
                                <i class="bi bi-arrow-clockwise"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <small-button data-bs-dismiss="modal">Close</small-button>
            </div>
        </div>
    </div>
</div>