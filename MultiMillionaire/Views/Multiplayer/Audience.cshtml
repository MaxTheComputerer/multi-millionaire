@{
    Layout = "_MultiplayerLayout";
    ViewData["Title"] = "Audience";
    ViewData["Role"] = UserRole.Audience;
}

@section Panels
{
    <div class="row mb-3" id="gameSetupPanels">
        <partial name="_PlayersListPanel"/>
    </div>

    <div class="row mb-3" id="fastestFingerPanels" style="display: none">
        <partial name="FastestFingerFirst/_DefaultPanel"/>
        <partial name="FastestFingerFirst/_ResultsPanel"/>
        <partial name="FastestFingerFirst/_Answers"/>
    </div>
    <partial name="FastestFingerFirst/_AnswerInput"/>

    <div class="row mb-3" id="mainGamePanels" style="display: none">
        <partial name="_DefaultPanel"/>
        <partial name="_AskTheAudiencePanel"/>
        <partial name="_PhoneAFriendPanel"/>

        <partial name="_MoneyTree"/>
    </div>
}

@section QuestionRows
{
    <partial name="_QuestionAndAnswers"/>
    <partial name="_Winnings"/>
}

@section FastestFingerBtns
{
    <partial name="FastestFingerFirst/_InputButtons"/>
}

@section Modals
{
    <partial name="_JoinGameModal"/>
    <partial name="_GameEndedModal"/>
    <partial name="_DisconnectedModal"/>
}